{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}

{{#post}}

<div class="parallax" style="background-image: url({{@blog.cover}});">
    <div class="text">
        <h1>{{split title separator="/" index=0}}</h1>
        <p>{{split title separator="/" index=1}}</p>
    </div>
</div>

<section class="text-block">

        <div class="light-bg">
            <div class="container">
                <h2 class="with-border">{{split author.bio separator="/" index=0}} <small class="color">/ {{split author.bio separator="/" index=1}}</small></h2>
                <div class="row-fluid">
                    <div class="span9">
                        <div class="thumbnail">
                            {{#if image}}
                                <div class="img-wrap">
                                    <img src="{{image}}" alt="{{title}}"/>
                                </div>
                            {{/if}}
                            <h3>{{split title separator="/" index=2}}</h3>
                            <div class="info-panel clearfix">
                                <span class="pull-left"><time datetime=""><i class="icon-calendar "></i> {{date format='DD/MM, YYYY'}}</time></span>
                                <span class="pull-right"><i class="icon-user"></i> {{author.name}} </span>
                            </div>
                            {{content}}
                        </div>

